{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve",
            "type": "shell",
            "command": "jekyll serve --livereload",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": [
                "$jekyll-error-watch",
                "$jekyll-warning-watch"
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "jekyll build --verbose",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [
                "$jekyll-error",
                "$jekyll-warning"
            ],
            "group": "build"
        }
    ]
}